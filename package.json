    "tippy.js": "^6.3.7",
    "tslib": "^2.3.0",
    "uuid": "^12.0.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@angular/build": "^20.3.10",
    "@angular/cli": "^20.3.10",
    "@angular/compiler-cli": "^20.3.11",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/express": "^5.0.1",
    "@types/file-saver": "^2.0.7",
    "@types/jasmine": "~5.1.0",
    "@types/md5": "^2.3.5",
    "@types/node": "^20.17.19",
    "@types/papaparse": "^5.3.16",
    "autoprefixer": "^10.4.21",
    "jasmine-core": "~5.8.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
