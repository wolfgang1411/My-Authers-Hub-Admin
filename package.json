    "ngx-material-intl-tel-input": "^20.1.2",
    "ngx-papaparse": "^8.0.0",
    "pdfjs-dist": "^5.4.296",
    "pdfjs-lib": "^0.0.149",
    "rxjs": "~7.8.0",
